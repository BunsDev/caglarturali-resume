{
  "include": ["./src/**/*", "./scripts/**/*"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    },
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "types": ["node"]
  }
}
